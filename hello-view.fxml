<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calcolatrice.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="operando1" prefHeight="25.0" prefWidth="106.0" text="Valore" />
   <Button fx:id="addizione" mnemonicParsing="false" onAction="#onHelloButtonClick" text="+" />
   <Button fx:id="sottrazione" mnemonicParsing="false" onAction="#gestBottone" text="-" />
   <Button fx:id="moltiplicazione" mnemonicParsing="false" onAction="#gestBottone" text="*" />
   <Button fx:id="divisione" mnemonicParsing="false" onAction="#gestBottone" text="/" />
   <TextField fx:id="operando2" prefHeight="0.0" prefWidth="270.0" text="Valore" />
   <Button fx:id="uguale" mnemonicParsing="false" text="=" />
   <TextField fx:id="risultato" text="Risultato" />

    <Label fx:id="welcomeText" />
</VBox>
